#!/usr/bin/env groovy

import groovy.json.JsonSlurperClassic

def jsonParse(def json) {
    new groovy.json.JsonSlurperClassic().parseText(json)
 }   

pipeline {
	agent any

	stages {

		stage('Test') {

			steps {
                        script {
                            node {
                             def tf_ver="/usr/bin/terraform -version".execute().text
                             println tf_ver 
                           }
                         }   
                      }
                }
       }
 }
